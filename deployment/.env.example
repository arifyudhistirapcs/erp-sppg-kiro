# ERP SPPG Production Environment Variables
# Copy this file to .env and fill in the actual values

# Database Configuration
DB_HOST=your-cloud-sql-private-ip
DB_PORT=5432
DB_NAME=erp_sppg
DB_USER=erp_sppg_user
DB_PASSWORD=your-secure-database-password

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-minimum-32-characters

# Firebase Configuration
FIREBASE_CREDENTIALS=/path/to/firebase-service-account.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# Cloud Storage Configuration
CLOUD_STORAGE_BUCKET=erp-sppg-storage-your-project-id
CLOUD_BACKUP_BUCKET=erp-sppg-backups-your-project-id

# Application Configuration
APP_ENV=production
APP_DEBUG=false
SERVER_PORT=8080
ALLOWED_ORIGINS=https://erp-sppg.example.com

# Monitoring Configuration
GRAFANA_PASSWORD=your-grafana-admin-password

# Backup Configuration
BACKUP_RETENTION_DAYS=30

# Security Configuration
SESSION_TIMEOUT=1800
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@erp-sppg.example.com

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json